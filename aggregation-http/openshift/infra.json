{
  "kind": "List",
  "apiVersion": "v1",
  "metadata": {
    "name": "vertx-msa-abcd-pipeline-http-a",
    "annotations": {
      "description": "Vert.x Microservice Example - Aggregation - A",
      "iconClass": "icon-jboss",
      "tags": "vert.x, eventbus, java, microservices"
    }

  },
  "labels": {
    "application": "vertx-msa-aggregation-http"
  },

  "items": [
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "vertx-infra"
      },
      "spec": {
        "triggers": [
          {
            "type": "ImageChange",
            "imageChange": {}
          }
        ],
        "source": {
          "type": "Git",
          "git": {
            "uri": "https://github.com/cescoffier/vertx-microservices-examples.git"
          },
          "contextDir": "aggregation-http/openshift-infrastructure"
        },
        "strategy": {
          "type": "Source",
          "sourceStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "name": "vertx-s2i:latest"
            }
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "vertx-infra:latest"
          }
        },
        "resources": {}
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "vertx-infra"
      },
      "spec": {
        "dockerImageRepository": "",
        "tags": [
          {
            "name": "latest"
          }
        ]
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "vertx-infra"
      },
      "spec": {
        "strategy": {
          "type": "Rolling",
          "rollingParams": {
            "updatePeriodSeconds": 1,
            "intervalSeconds": 1,
            "timeoutSeconds": 600
          },
          "resources": {}
        },
        "triggers": [
          {
            "type": "ConfigChange"
          },
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "vertx-infra"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "vertx-infra:latest"
              }
            }
          }
        ],
        "replicas": 1,
        "selector": {
          "deploymentconfig": "vertx-infra"
        },
        "template": {
          "metadata": {
            "labels": {
              "deploymentconfig": "vertx-infra"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "vertx-infra",
                "image": "vertx-infra",
                "ports": [
                  {
                    "containerPort": 8080,
                    "protocol": "TCP"
                  },
                  {
                    "containerPort" : 5701,
                    "protocol" : "TCP"
                  }
                ],
                "livenessProbe": {
                  "tcpSocket": {
                    "port": 8080
                  },
                  "initialDelaySeconds": 30,
                  "timeoutSeconds": 1
                },
                "resources": {},
                "terminationMessagePath": "/dev/termination-log",
                "imagePullPolicy": "IfNotPresent",
                "securityContext": {
                  "capabilities": {},
                  "privileged": false
                }
              }
            ],
            "restartPolicy": "Always",
            "dnsPolicy": "ClusterFirst"
          }
        }
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "vertx-infra"
      },
      "spec": {
        "to": {
          "kind": "Service",
          "name": "vertx-infra"
        }
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "vertx-infra"
      },
      "spec": {
        "ports": [
          {
            "name": "http",
            "port": 8080,
            "targetPort": 8080
          }
        ],
        "selector": {
          "deploymentconfig": "vertx-infra"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
      }
    },
    {
      "kind" : "Service",
      "apiVersion" : "v1",
      "metadata" : {
        "name": "vertx-eventbus",
        "labels" : {
          "component" : "vertx-eventbus"
        }
      },
      "spec" : {
        "clusterIP" : "None",
        "ports" : [ {
          "port" : 5701,
          "protocol" : "TCP",
          "targetPort" : 5701
        } ],
        "selector": {
          "deploymentconfig": "vertx-infra"
        }
      }
    }
  ]
}